<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/timebuy_imageview"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/qssks"
            />
        <TextView
            android:id="@+id/timebuy_tv_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/timebuy_imageview"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:text="李施德林漱口水 冰蓝口味 三包装500ml*3瓶 泰国进口"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/timebuy_tv_remark"
            android:layout_marginTop="10dp">


                <TextView
                    android:id="@+id/timebuy_cuxiaojia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="促销价￥"/>
                <TextView
                    android:id="@+id/timebuy_cankaojia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/timebuy_cuxiaojia"
                    android:text="参考价：￥"/>
            <TextView
                android:id="@+id/img_path"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/timebuy_cankaojia"
                android:text="图片链接"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="立即\n抢购"/>


        </RelativeLayout>


    </RelativeLayout>



</RelativeLayout>